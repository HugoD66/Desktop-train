<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER"
      stylesheets="@assets/generalStyle.css"
      spacing="20.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.gestionbudget.dialog.DialogController"
      styleClass="scene-background"
>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" styleClass="labelTitle">Application gestion de budget</Label>

    <TableView fx:id="tableView">
        <columns>
            <TableColumn styleClass="column-normal"
                         editable="false"
                         text="Période"
                         minWidth="80">
                <cellValueFactory>
                    <PropertyValueFactory property="periode"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn styleClass="column-green"
                         editable="false"
                         text="Total"
                         minWidth="80">
                <cellValueFactory>
                    <PropertyValueFactory property="total"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn styleClass="column-normal"
                         editable="false"
                         text="Logement"
                         minWidth="80">
                <cellValueFactory>
                    <PropertyValueFactory property="logement"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn styleClass="column-green"
                         editable="false"
                         text="Nourriture"
                         minWidth="80">
                <cellValueFactory>
                    <PropertyValueFactory property="nourriture"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn styleClass="column-normal"
                         editable="false"
                         text="Sorties"
                         minWidth="80">
                <cellValueFactory>
                    <PropertyValueFactory property="sorties"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn styleClass="column-green"
                         editable="false"
                         text="Transport"
                         minWidth="80">
                <cellValueFactory>
                    <PropertyValueFactory property="transport"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn styleClass="column-normal"
                         editable="false"
                         text="Voyage"
                         minWidth="80">
                <cellValueFactory>
                    <PropertyValueFactory property="voyage"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn styleClass="column-green"
                         editable="false"
                         text="Impôts"
                         minWidth="80">
                <cellValueFactory>
                    <PropertyValueFactory property="impots"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn styleClass="column-normal"
                         editable="false"
                         text="Autres"
                         minWidth="80">
                <cellValueFactory>
                    <PropertyValueFactory property="autres"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
        <items>
            <FXCollections fx:factory="observableArrayList" >
            </FXCollections>
        </items>
    </TableView>

    <HBox styleClass="button-list" >
        <Button styleClass="addButton" text="Ajout d'une dépense" onAction="#addLine" />
        <Button styleClass="deleteButton" text="Supprimer une dépense" onAction="#deleteLine" />
    </HBox>
</VBox>
